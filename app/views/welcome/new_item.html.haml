              %option{value: "45"} 宮崎県
              %option{value: "46"} 鹿児島県
              %option{value: "47"} 沖縄県
            = fa_icon "angle-down"
          %p.new_item_page_container_main_label
            発送までの日数
            %span.required
              必須
          .select_box
            %select(name="delivery_time")
              %option ---
              %option 1~2日
              %option 3~4日
              %option 4~7日
            = fa_icon "angle-down"
      .new_item_page_container_main_item_price
        .left_content
          販売価格
          %span (300〜9,999,999)
        .right_content
          .input_price
            %p.new_item_page_container_main_label
              価格
              %span.required
                必須
            %input(type="text" name="price" id="price" placeholder="例）300")
          .sales_fee
            販売手数料(10%)
          .sales_benefit
            販売利益
    .new_item_page_container_bottom
      .bottom__attenssion
        %span プライバシーポリシー
        %span メルカリ利用規約
        %span 特定商取引に関する表記
      .bottom__logo
        = image_tag 'logo-gray.svg'
      .bottom__copy_light
        &copy; 2019 Mercari

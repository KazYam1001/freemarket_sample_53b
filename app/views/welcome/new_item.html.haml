.new_item_page
  .new_item_page_container
    .new_item_page_container_top
      = image_tag "logo.svg"
    %form.new_item_page_container_main
      .new_item_page_container_main_title
        商品の情報を入力
      .new_item_page_container_main_item_image
        %p.new_item_page_container_main_label
          出品画像 
          %span.required
            必須
        %p.desc 最大10枚までアップロードできます。
        .image_file_area
          %p 
            ドラッグアンドドロップ
            %br
              もしくはクリックをしてアップロード
          %input(type="file")
      .new_item_page_container_main_item_description
        %p.new_item_page_container_main_label
          商品名 
          %span.required
            必須
        %input(type="text" placeholder="商品名 (必須40文字まで)" maxlength="40")
        %p.new_item_page_container_main_label
          商品の説明
          %span.required
            必須
        %textarea(maxlength="1000" placeholder="商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。")
      .new_item_page_container_main_item_detail
        .left_content
          商品の詳細
        .right_content
          %p.new_item_page_container_main_label
            カテゴリ
            %span.required
              必須
          .select_box
            %select(name="categoly")
              %option ---
              %option レディース
              %option メンズ
              %option ベビー・キッズ
              %option 家具・インテリア
              %option 本・音楽・ゲーム
            = fa_icon "angle-down"
          %p.new_item_page_container_main_label
            商品の状態
            %span.required
              必須
          .select_box
            %select(name="item_status")
              %option ---
              %option 新品
              %option 未使用に近い
              %option 目立った傷や汚れなし
              %option やや傷や汚れあり
              %option 傷や汚れあり
              %option 全体的に状態が悪い
            = fa_icon "angle-down"
      .new_item_page_container_main_item_delivary
        .left_content
          配送について
        .right_content
          %p.new_item_page_container_main_label
            配送料の負担
            %span.required
              必須
          .select_box
            %select(name="delivery_burden" id="delivery_burden")
              %option ---
              %option 送料込み(出品者負担)
              %option 着払い(購入者負担)
            = fa_icon "angle-down"
          %p.new_item_page_container_main_label.delivery_method_select_label
            配送の方法
            %span.required
              必須
          .select_box.delivery_method_select
            %select(name="delivery_method" id="delivery_method")
            = fa_icon "angle-down"
          %p.new_item_page_container_main_label
            発送元の地域
            %span.required
              必須
          .select_box
            %select(name="delivery_prefecture")
              %option{value: "0"}---
              %option{value: "1"} 北海道
              %option{value: "2"} 青森県
              %option{value: "3"} 岩手県
              %option{value: "4"} 宮城県
              %option{value: "5"} 秋田県
              %option{value: "6"} 山形県
              %option{value: "7"} 福島県
              %option{value: "8"} 茨城県
              %option{value: "9"} 栃木県
              %option{value: "10"} 群馬県
              %option{value: "11"} 埼玉県
              %option{value: "12"} 千葉県
              %option{value: "13"} 東京都
              %option{value: "14"} 神奈川県
              %option{value: "15"} 新潟県
              %option{value: "16"} 富山県
              %option{value: "17"} 石川県
              %option{value: "18"} 福井県
              %option{value: "19"} 山梨県
              %option{value: "20"} 長野県
              %option{value: "21"} 岐阜県
              %option{value: "22"} 静岡県
              %option{value: "23"} 愛知県
              %option{value: "24"} 三重県
              %option{value: "25"} 滋賀県
              %option{value: "26"} 京都府
              %option{value: "27"} 大阪府
              %option{value: "28"} 兵庫県
              %option{value: "29"} 奈良県
              %option{value: "30"} 和歌山県
              %option{value: "31"} 鳥取県
              %option{value: "32"} 島根県
              %option{value: "33"} 岡山県
              %option{value: "34"} 広島県
              %option{value: "35"} 山口県
              %option{value: "36"} 徳島県
              %option{value: "37"} 香川県
              %option{value: "38"} 愛媛県
              %option{value: "39"} 高知県
              %option{value: "40"} 福岡県
              %option{value: "41"} 佐賀県
              %option{value: "42"} 長崎県
              %option{value: "43"} 熊本県

.signup_wrapper
  .signup
    %header.signup_header
      .signup_header__img
        = image_tag "logo.svg"
      
    %main.signup_main
      .signup_main__view
        %h1 新規会員登録
        .signup_main__selection
          %p
            %button.signup_main__selection--btn-mail
              = fa_icon "envelope-o"
              %a
                メールアドレスで登録
            %button.signup_main__selection--btn-facebook
              = fa_icon "facebook-square"
              %a
                Facebook
            %button.signup_main__selection--btn-google
              .signup_main_btn__img
                = image_tag "google-icon.png"
                %a
                  Google
    = render 'shared/new_signup_footer'
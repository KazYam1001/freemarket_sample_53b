.user-my-page
  = render "shared/header"
  .bread
    %span 
      - breadcrumb :profile
      = breadcrumbs separator: " #{content_tag(:i, '', class:'fa fa-chevron-right')} "
  .container
    .left-column
      = render "shared/my_page_sidebar"
    .right-column
      .edit-profile
        .edit-profile__header
          プロフィール
        %form.edit-profile__form
          .edit-profile__form__banner
            .edit-profile__form__banner__icon
              = image_tag "member_photo_noimage_thumb.png"
            .edit-profile__form__banner__name
              %input{placeholder: "John"}
          .edit-profile__form__content
            %textarea{placeholder: "例)こんにちは！ご覧になってくれてありがとうございます。"}
          .edit-profile__form__button
            = link_to "変更する", "#"
  = render "shared/footer"
  = render "shared/new_item_button"
